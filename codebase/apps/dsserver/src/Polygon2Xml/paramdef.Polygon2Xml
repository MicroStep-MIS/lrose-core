//////////////////////////////////////////////////////////

commentdef {
  p_header = "Param file for Bdry2Xml. Ingests AutoNowcaster GenPoly polygon objects and
  converts to Xml format as specified by Beijing 2008 Olympics FDP";
}


typedef enum {
  DEBUG_OFF, DEBUG_ON
} debug_t;

paramdef enum debug_t {
  p_default = DEBUG_OFF;
  p_descr = "Debug option";
  p_help = "If set, debug messages will be printed appropriately";
} debug;

paramdef string {
  p_default = "primary";
  p_descr = "Program instance for process registration.";
  p_help = "This program registers with procmap. This is the instance used for registration.";
} instance;


commentdef {
  p_header = "RUN MODES";
};

typedef enum {
  REALTIME, ARCHIVE
} mode_t;

paramdef enum mode_t {
  p_default = REALTIME;
  p_descr = "Modes of running the program. In realtime mode the
  program is triggered by the latest data info file in the input spdb
  directory. In ARCHIVE mode, you must enter start and end times on
  the command line";
} mode;

commentdef {
  p_header = "INPUT DATA";
};

paramdef char* {
  p_descr = "Input url";
  p_default = "";
} input_url;

paramdef string {
  p_default = "";
  p_descr = "yyyymmddhhMMss";
  p_help = "Set for ARCHIVE mode only.";
} start_time;

paramdef string {
  p_default = "";
  p_descr = "yyyymmddhhMMss";
  p_help = "Set for ARCHIVE mode only.";
} end_time;

paramdef int {
  p_default = 54000;
  p_descr = "maximum age of data that will be processed in realtime mode.";
}max_valid_age;

commentdef {
  p_header = "OUTPUT DATA";
};

paramdef char* {
  p_descr = "Output dir";
  p_default = "$(RAP_DATA_DIR)/$(PROJECT)/xml/polygon";
} output_dir;



