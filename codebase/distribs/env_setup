#! /bin/csh

#
# Example setup for RAP make environment
#
# Sets directories up relative to current directory.
#
# You need to set up HOST_OS env variable yourself.
#

echo
echo "  You need to set manually the HOST_OS environment."
echo
echo "  Legal options are:"
echo
echo "    SUNOS4 (Sun BSD)"
echo "    SUNOS5 (Solaris)"
echo "    IRIX4 (SGI 4.x)"
echo "    IRIX5 (SGI 5.x)"
echo "    HPUX (HP)"
echo "    AIX (IBM)"
echo "    DECOSF1 (DEC Alpha)"
echo "    LINUX"
echo

setenv RAP_DIR `pwd`

setenv RAP_MAKE_INC_DIR $RAP_DIR/make_include

setenv RAP_MAKE_BIN_DIR $RAP_DIR/make_bin

setenv RAP_INC_DIR $RAP_DIR/include

setenv RAP_LIB_DIR $RAP_DIR/lib

setenv RAP_BIN_DIR $RAP_DIR/bin

setenv RAP_MAN_DIR $RAP_DIR/man

setenv RAP_DOC_DIR $RAP_DIR/doc

setenv RAP_DEBUG_LIB_DIR $RAP_DIR/debug_lib

setenv RAP_PROFILE_LIB_DIR $RAP_DIR/profile_lib

setenv RAP_INSURE_LIB_DIR $RAP_DIR/insure_lib

setenv RAP_SHARED_INC_DIR /rap/include

setenv RAP_SHARED_LIB_DIR /rap/lib

setenv RAP_SHARED_BIN_DIR /rap/bin

setenv RAP_SHARED_MAN_DIR /rap/man

setenv RAP_SHARED_DOC_DIR /rap/doc

setenv RAP_INST_BIN_DIR /rap/bin

setenv RAP_INST_LIB_DIR /rap/lib

set path = ($RAP_BIN_DIR $path)



